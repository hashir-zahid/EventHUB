            }

        /* Play icon for videos */
        .video-play-icon {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 2.5rem;
            opacity: 0.8;
            z-index: 10;
        }

        /* Media type badge */
        .media-type-badge {
            position: absolute;
            top: 10px;
