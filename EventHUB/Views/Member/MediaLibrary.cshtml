            .media-thumbnail-container img {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover; /* Crop to fill container */
            }

            /* For videos */
            .media-thumbnail-container video {
                position: absolute;
                top: 0;
                left: 0;
