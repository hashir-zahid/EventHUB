        }

            .media-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
            }

        /* Thumbnail Container - Fixed Aspect Ratio (1:1 or 16:9) */
        .media-thumbnail-container {
            position: relative;
